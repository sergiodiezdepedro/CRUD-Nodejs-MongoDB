extends layout

block content
    h1= article.title
    h4 Por #{author}
    p= article.body
    hr
    if user
        if user.id == article.author
            a.btn.btn-warning(href='/articles/edit/'+article._id) Editar
            a.btn.btn-danger.delete-article(href='#', data-id=article._id) Borrar